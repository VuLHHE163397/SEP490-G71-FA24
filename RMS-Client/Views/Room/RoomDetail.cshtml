        function getUserIdFromToken(token) {
            try {
                const tokenParts = token.split('.');
                const payload = JSON.parse(atob(tokenParts[1]));
                return payload.UserId;
            } catch (error) {
                console.error("Không mã hóa đc token:", error);
                return null;
            }
        }

