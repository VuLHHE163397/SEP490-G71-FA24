@using RMS_API.Models
@model Room

@{
    ViewBag.Title = "Chi Tiết Phòng";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Chi Tiết Phòng</h2>

    <div class="card shadow-sm border-0 rounded-lg">
        <!-- Khu vực ảnh phòng -->
        <div class="card-img-top text-center p-3">
            <img src="~/images/room1.jpg" alt="Ảnh phòng" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
        </div>

        <div class="card-header bg-primary text-white text-center py-4">
            <h4 class="m-0">Phòng Số @Model.RoomNumber</h4>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <p class="mb-2"><i class="fas fa-door-open text-primary"></i> <strong>Số Phòng:</strong> @Model.RoomNumber</p>
                    <p class="mb-2"><i class="fas fa-ruler-combined text-primary"></i> <strong>Diện Tích:</strong> @Model.Area m²</p>
                    <p class="mb-2"><i class="fas fa-dollar-sign text-primary"></i> <strong>Giá Phòng:</strong> @string.Format("{0:N0} VNĐ", @Model.Price)</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p class="mb-2"><i class="fas fa-building text-primary"></i> <strong>Tòa Nhà:</strong> Tòa @Model.BuildingId</p>
                    <p class="mb-2">
                        <i class="fas fa-info-circle text-primary"></i> <strong>Trạng Thái:</strong>
                        @{
                            string statusNameVi;
                            string statusColor;
                            switch (Model.RoomStatusId)
                            {
                                case 1:
                                    statusNameVi = "Trống";
                                    statusColor = "badge bg-success";
                                    break;
                                case 2:
                                    statusNameVi = "Đã có người";
                                    statusColor = "badge bg-danger";
                                    break;
                                case 3:
                                    statusNameVi = "Đang sửa chữa";
                                    statusColor = "badge bg-warning text-dark";
                                    break;
                                case 4:
                                    statusNameVi = "Sắp trống";
                                    statusColor = "badge bg-info text-dark";
                                    break;
                                default:
                                    statusNameVi = "Không xác định";
                                    statusColor = "badge bg-secondary";
                                    break;
                            }
                        }
                        <span class="@statusColor">@statusNameVi</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="card-footer text-center py-3">
            <a href="@Url.Action("ListRoom", "Room", new { buildingId = Model.BuildingId })" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
    }

    .card-header h4 {
        font-size: 1.5em;
    }

    .card-body p {
        font-size: 1.1em;
    }

    .btn-outline-primary {
        padding: 0.5em 1.5em;
    }

    .card-img-top img {
        width: 100%;
        border-radius: 8px;
    }
</style>
