<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header text-center bg-primary text-white">
                        <h3>My Profile</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>First Name:</strong> <span id="firstName">Loading...</span>
                        </div>
                        <div class="mb-3">
                            <strong>Middle Name:</strong> <span id="midName">Loading...</span>
                        </div>
                        <div class="mb-3">
                            <strong>Last Name:</strong> <span id="lastName">Loading...</span>
                        </div>
                        <div class="mb-3">
                            <strong>Email:</strong> <span id="email">Loading...</span>
                        </div>
                        <div class="mb-3">
                            <strong>Phone:</strong> <span id="phone">Loading...</span>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-secondary" onclick="window.location.href='/Home/Index';">Back to Home</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            const token = localStorage.getItem("token");
            console.log("token:", token);
            if (token == 1 || !token) {
                window.location.href = "/Auth/Login";
            }



            $(document).ready(function () {
                const token = localStorage.getItem("token");

                if (!token) {
                    window.location.href = "/Auth/Login";
                    return;
                }
                try {
                    // Decode JWT để lấy email
                    const tokenParts = token.split('.');
                    const payload = JSON.parse(atob(tokenParts[1]));
                    const email = payload.email; // Lấy email từ payload

                    // Gọi API để lấy thông tin profile
                    $.ajax({
                        url: `https://localhost:7056/api/User/getProfile?email=${encodeURIComponent(email)}`,
                        type: "GET",
                        headers: {
                            "Authorization": `Bearer ${token}`
                        },
                        success: function (data) {
                            // Hiển thị thông tin lên giao diện
                            $("#firstName").text(data.firstName || "N/A");
                            $("#midName").text(data.midName || "N/A");
                            $("#lastName").text(data.lastName || "N/A");
                            $("#email").text(data.email || "N/A");
                            $("#phone").text(data.phone || "N/A");
                        },
                        error: function () {
                            alert("Không thể tải thông tin hồ sơ.");
                        }
                    });
                } catch (error) {
                    console.error("Lỗi khi giải mã token:", error);
                    window.location.href = "/Auth/Login";
                }
            });

        });
    </script>
</body>
</html>