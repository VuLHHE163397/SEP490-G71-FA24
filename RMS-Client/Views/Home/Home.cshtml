        window.onload = function () {
            fetchProvinces();
        };

        // Fetch and populate provinces
        function fetchProvinces() {
            fetch('/api/address/getProvinces')
                .then(res => res.json())
                .then(data => {
                    let provinceSelect = document.getElementById('province');
                    data.forEach(province => {
                        provinceSelect.innerHTML += `<option value="${province.id}">${province.name}</option>`;
                    });
                });
        }

        // Fetch and populate districts based on province selection
        function updateDistricts() {
            let provinceId = document.getElementById('province').value;
            let districtSelect = document.getElementById('district');
            districtSelect.disabled = true;
            document.getElementById('commune').disabled = true;

            if (provinceId) {
                fetch(`/api/address/getDistricts/${provinceId}`)
                    .then(res => res.json())
                    .then(data => {
                        districtSelect.innerHTML = '<option value="">Chọn Quận/Huyện/Thị Xã</option>';
                        data.forEach(district => {
                            districtSelect.innerHTML += `<option value="${district.id}">${district.name}</option>`;
                        });
                        districtSelect.disabled = false;
                    });
            }
        }

        // Fetch and populate communes based on district selection
        function updateCommunes() {
            let districtId = document.getElementById('district').value;
            let communeSelect = document.getElementById('commune');
            communeSelect.disabled = true;

            if (districtId) {
                fetch(`/api/address/getWards/${districtId}`)
                    .then(res => res.json())
                    .then(data => {
                        communeSelect.innerHTML = '<option value="">Chọn Xã/Phường/Thị Trấn</option>';
                        data.forEach(commune => {
                            communeSelect.innerHTML += `<option value="${commune.id}">${commune.name}</option>`;
                        });
                        communeSelect.disabled = false;
                    });
            }
