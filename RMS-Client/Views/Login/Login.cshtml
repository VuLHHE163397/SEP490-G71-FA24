<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RMS</title>

    <link rel="shortcut icon" type="image/png" href="~/images/logos/house.jpg" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
    <style>
        /* Popup styling */
        #popupMessage {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 15px 20px;
            background-color: #4caf50;
            color: white;
            border-radius: 5px;
            font-size: 16px;
            z-index: 1000;
        }

        #popupErrorMessage {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 15px 20px;
            background-color: #C53500;
            color: white;
            border-radius: 5px;
            font-size: 16px;
            z-index: 1000;
        }

        .card {
            max-width: 500px;
            width: 100%;
            height: 500px;
            margin: auto;
            / position: relative;
        }

        .page-wrapper {
            padding: 20px;
        }

        body {
            background-image: url('~/images/bg1.jpg'); /* Đường dẫn tới ảnh */
            background-size: cover; /* Bao phủ toàn bộ màn hình */
            background-repeat: no-repeat; /* Không lặp lại ảnh */
            background-position: center; /* Căn giữa ảnh */
            position: relative;
            margin: 0; /* Xóa margin mặc định của body */
            padding: 0;
            height: 100vh; /* Chiều cao toàn màn hình */
        }

        /* Overlay for opacity effect */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.5); /* Màu trắng mờ, thay đổi giá trị 0.5 để điều chỉnh */
            z-index: -1; /* Đảm bảo lớp phủ ở phía dưới */
        }

        .page-wrapper {
            position: relative;
            z-index: 1; /* Nội dung nằm trên lớp nền */
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="overlay"></div> <!-- Lớp phủ nền -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-10 col-lg-8 col-xxl-6">
                        <div class="card mb-0">
                            <div class="card-body">
                                <form id="loginForm">
                                    <div class="mb-3">
                                        <script>
                                            console.log("token:", token);</script>
                                        <label for="email" class="form-label">Tài khoản</label>
                                        <input type="email" class="form-control" id="email" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Mật khẩu</label>
                                        <input type="password" class="form-control" id="password" required>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mb-4">
                                        <a class="text-primary fw-bold" href="/Home/Home">Về trang chủ</a>
                                        <a class="text-primary fw-bold" href="./index.html">Quên mật khẩu</a>
                                    </div>
                                    <button type="button" onclick="login()" class="btn btn-primary w-100">Đăng nhập</button>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="fs-4 mb-0 fw-bold">Chưa có tài khoản?</p>
                                        <a class="text-primary fw-bold ms-2" href="Register">Đăng ký</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Popup Message -->
    <div id="popupMessage">Đăng nhập thành công!</div>
    <div id="popupErrorMessage">Đăng nhập thất bại!</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function login() {
            // if (payload.role === "Admin") {
            //     window.location.href = "/User/ListUser";
            // }
            var email = $("#email").val();
            var password = $("#password").val();

            $.ajax({
                url: "https://localhost:7056/api/Auth/login",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ email: email, Password: password }),
                success: function (response) {
                    localStorage.setItem("token", response.token);
                    showPopup("Đăng nhập thành công!");

                    // const token = localStorage.getItem("token");
                    try {
                        // Giải mã token jwt
                        const tokenParts = response.token.split('.');
                        const payload = JSON.parse(atob(tokenParts[1]));
                        localStorage.setItem("email", payload.unique_name);

                        // xét role chuyển trang
                        setTimeout(function () {
                            if (payload.role === "Admin") {
                                window.location.href = "/User/ListUser";
                            }
                            if (payload.role === "Landlord") {
                                window.location.href = "/Building/ListBuilding";
                            }
                        }, 1000);
                    } catch (error) {
                        console.error("Failed to decode token", error);
                        alert("Đăng nhập thành công, nhưng có lỗi xảy ra khi xử lý thông tin người dùng.");
                    }
                },

                error: function (xhr, status, error) {
                    showErrorPopup("Đăng nhập thất bại: " + xhr.responseText);
                }
            });
        }

        function showPopup(message) {
            var popup = $("#popupMessage");
            popup.text(message);
            popup.fadeIn();
            setTimeout(function () {
                popup.fadeOut();
            }, 500);
        }

        function showErrorPopup(message) {
            var popup = $("#popupErrorMessage");
            popup.text(message);
            popup.fadeIn();
            setTimeout(function () {
                popup.fadeOut();
            }, 3000);
        }
    </script>
</body>

</html>
