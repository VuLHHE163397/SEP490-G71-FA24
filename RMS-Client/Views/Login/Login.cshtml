                        <!-- Google Sign-In Section -->
                        <div class="text-center">
                            <div id="g_id_onload"
                                 data-client_id="496416397837-mlmbshr1ci83d21utn0q4eghu50rn04s.apps.googleusercontent.com"
                                 data-callback="handleCredentialResponse"
                                 data-auto_prompt="false">
