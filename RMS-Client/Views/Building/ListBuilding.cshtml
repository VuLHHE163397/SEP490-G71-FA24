@model List<RMS_API.DTOs.BuildingDTO> // Sửa đổi thành namespace thực tế của bạn

@{
    ViewData["Title"] = "Danh sách tòa nhà"; // Tiêu đề trang
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Nếu bạn có file CSS tùy chỉnh -->
    <style>
        /* Thêm một số kiểu CSS để làm cho bảng đẹp hơn */
        th {
            text-align: center;
        }

        td {
            text-align: center;
        }

        .btn {
            margin-right: 5px; /* Khoảng cách giữa các nút */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>

        <!-- Nút Create -->
        <div class="mb-3">
            <a asp-controller="ManageBuilding" asp-action="Create" class="btn btn-primary">Tạo Tòa Nhà Mới</a>
        </div>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Số tầng</th>
                    <th>Số phòng</th>
                    <th>Địa chỉ</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th> <!-- Thêm cột Hành động -->
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var building in Model)
                    {
                        <tr>
                            <td>@building.Id</td>
                            <td>@building.Name</td>
                            <td>@building.TotalFloors</td>
                            <td>@building.NumberOfRooms</td>
                            <td>@building.Address</td>
                            <td>@building.BuildingStatus</td>
                            <td>
                                <!-- Thêm nút chỉnh sửa và xóa -->
                                <button class="btn btn-warning" onclick="editBuilding(@building.Id)">Sửa</button>
                                <button class="btn btn-danger" onclick="deleteBuilding(@building.Id)">Xóa</button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function editBuilding(id) {
            // Chuyển hướng đến trang chỉnh sửa
            window.location.href = '/ManageBuilding/Edit/' + id;
        }

        function deleteBuilding(id) {
            if (confirm('Bạn có chắc chắn muốn xóa tòa nhà này không?')) {
                // Gửi yêu cầu xóa qua AJAX hoặc chuyển hướng đến trang xóa
                $.ajax({
                    url: '/ManageBuilding/Delete/' + id,
                    type: 'POST',
                    success: function (result) {
                        // Tải lại trang sau khi xóa thành công
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert('Có lỗi xảy ra khi xóa tòa nhà: ' + error);
                    }
                });
            }
        }
    </script>
</body>
</html>
